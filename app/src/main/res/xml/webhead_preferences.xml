<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidElementNotAllowed -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:key="settings"
                  android:title="@string/settings">

    <PreferenceCategory android:title="@string/web_heads">

        <arun.com.chromer.preferences.widgets.IconSwitchPreference
            android:defaultValue="false"
            android:key="webhead_enabled_pref"
            android:summary="@string/web_heads_title"
            android:title="@string/web_heads_description"/>

        <arun.com.chromer.preferences.widgets.IconCheckboxPreference
            android:defaultValue="true"
            android:key="aggressive_loading"
            android:summary="@string/aggressive_background_loading_desc"
            android:title="@string/aggressive_background_loading"/>

        <arun.com.chromer.preferences.widgets.ColorPreference
            android:key="webhead_color"
            android:title="@string/web_heads_color"
            app:color="@color/web_head_bg"/>

        <arun.com.chromer.preferences.widgets.IconListPreference
            android:defaultValue="1"
            android:dialogTitle="@string/webhead_spawn_title"
            android:entries="@array/webHeadsSpawnValues"
            android:entryValues="@array/webHeadsSpawnKeys"
            android:key="webhead_spawn_preference"
            android:title="@string/webhead_spawn_summary"/>

        <arun.com.chromer.preferences.widgets.IconListPreference
            android:defaultValue="1"
            android:dialogTitle="@string/webhead_size_dialog"
            android:entries="@array/webHeadsSizeValues"
            android:entryValues="@array/webHeadsSizeKeys"
            android:key="webhead_size_preference"
            android:title="@string/webhead_size_title"/>

        <arun.com.chromer.preferences.widgets.IconCheckboxPreference
            android:defaultValue="true"
            android:key="webhead_close_onclick_pref"
            android:summary="@string/web_close_on_open_desc"
            android:title="@string/web_close_on_open_title"/>
    </PreferenceCategory>
</PreferenceScreen>